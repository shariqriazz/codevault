{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openrouter": {
      "models": {
        "openai/gpt-5.1-codex": {
          "id": "openai/gpt-5.1-codex",
          "name": "GPT-5.1 Codex (High Effort)",
          "reasoning": true,
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "high",
            "reasoningSummary": "detailed"
          }
        }
      }
    }
  },
  "instructions": ["AGENTS.md"],
  "agent": {
    "codevault-reviewer": {
      "description": "Specialized code reviewer for CodeVault with deep knowledge of semantic search, indexing, and TypeScript best practices",
      "mode": "subagent",
      "model": "openrouter/openai/gpt-5.1-codex",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      },
      "permission": {
        "bash": {
          "git diff": "allow",
          "git log*": "allow",
          "git show*": "allow",
          "*": "deny"
        }
      }
    }
  }
}
