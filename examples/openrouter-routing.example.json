{
  "comment": "OpenRouter with Provider Routing - Advanced configuration for cost/performance/privacy control",
  "defaultProvider": "openai",
  "providers": {
    "openai": {
      "apiKey": "your-openrouter-api-key-here",
      "baseUrl": "https://openrouter.ai/api/v1",
      "model": "qwen/qwen3-embedding-8b",
      "dimensions": 4096,
      "comment_routing": "Control which providers OpenRouter uses for embeddings",
      "routing": {
        "comment_options": "only | allow_fallbacks | data_collection | zdr | sort | order | max_price",
        "only": ["nebius"],
        "allow_fallbacks": false,
        "data_collection": "deny",
        "zdr": true
      }
    }
  },
  "chatLLM": {
    "openai": {
      "apiKey": "your-openrouter-api-key-here",
      "baseUrl": "https://openrouter.ai/api/v1",
      "model": "anthropic/claude-sonnet-4.5",
      "maxTokens": 32000,
      "temperature": 0.1,
      "comment_routing": "Control which providers OpenRouter uses for chat",
      "routing": {
        "comment": "Sort by throughput for best performance",
        "sort": "throughput",
        "allow_fallbacks": true
      }
    }
  },
  "maxTokens": 32000,
  "rateLimit": {
    "rpm": 10000,
    "tpm": 600000
  },
  "reranker": {
    "apiUrl": "https://api.novita.ai/openai/v1/rerank",
    "apiKey": "your-novita-api-key-here",
    "model": "qwen/qwen3-reranker-8b"
  },
  "encryption": {
    "enabled": false,
    "key": ""
  },
  "routing_examples": {
    "cost_optimization": {
      "comment": "Route to cheapest providers",
      "routing": {
        "sort": "price"
      }
    },
    "performance_priority": {
      "comment": "Route to fastest providers",
      "routing": {
        "sort": "throughput"
      }
    },
    "data_privacy": {
      "comment": "Deny providers that collect data, enforce ZDR",
      "routing": {
        "zdr": true,
        "data_collection": "deny"
      }
    },
    "custom_provider_order": {
      "comment": "Try providers in specific order with fallback",
      "routing": {
        "order": ["anthropic", "openai", "together"],
        "allow_fallbacks": true
      }
    },
    "provider_exclusion": {
      "comment": "Skip specific providers",
      "routing": {
        "ignore": ["bad-provider-1", "bad-provider-2"]
      }
    },
    "price_limit": {
      "comment": "Set maximum price you want to pay",
      "routing": {
        "max_price": {
          "prompt": 1.0,
          "completion": 2.0,
          "request": 0.5
        }
      }
    },
    "all_options": {
      "comment": "Example using multiple routing options together",
      "routing": {
        "sort": "throughput",
        "only": ["nebius", "openai"],
        "allow_fallbacks": true,
        "zdr": true,
        "data_collection": "deny"
      }
    }
  },
  "environment_variables_alternative": {
    "comment": "You can also set routing via environment variables (useful for CI/CD)",
    "bash_example": "# Not supported directly - use JSON config or codevault config set command",
    "cli_example": "codevault config set providers.openai.routing.only '[\"nebius\"]'"
  }
}
